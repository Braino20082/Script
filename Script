local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Alte GUIs löschen
if playerGui:FindFirstChild("ESPMainUI") then
    playerGui.ESPMainUI:Destroy()
end

-- ScreenGui erstellen
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ESPMainUI"
screenGui.Parent = playerGui

-- Hauptframe
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 800, 0, 500)
mainFrame.Position = UDim2.new(0.5, -400, 0.5, -250)
mainFrame.BackgroundColor3 = Color3.fromRGB(200, 100, 100)
mainFrame.Parent = screenGui

-- Titelbar
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 35)
titleBar.BackgroundColor3 = Color3.fromRGB(100, 200, 100)
titleBar.Parent = mainFrame

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, -70, 1, 0)
titleLabel.Position = UDim2.new(0, 10, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Text = "ESP Menu v2.2 - Bang Bang V2"
titleLabel.Font = Enum.Font.GothamBold
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 16
titleLabel.TextXAlignment = Enum.TextXAlignment.Left
titleLabel.Parent = titleBar

-- Sidebar
local sidebar = Instance.new("Frame")
sidebar.Size = UDim2.new(0, 150, 1, -35)
sidebar.Position = UDim2.new(0, 0, 0, 35)
sidebar.BackgroundColor3 = Color3.fromRGB(100, 100, 200)
sidebar.Parent = mainFrame

-- Content Area
local contentArea = Instance.new("Frame")
contentArea.Size = UDim2.new(1, -150, 1, -35)
contentArea.Position = UDim2.new(0, 150, 0, 35)
contentArea.BackgroundColor3 = Color3.fromRGB(200, 200, 100)
contentArea.Parent = mainFrame

-- Panels für Buttons
local panels = {}

for _, name in ipairs({"Player","ESP","Players","Settings"}) do
    local panel = Instance.new("Frame")
    panel.Size = UDim2.new(1, 0, 1, 0)
    panel.Position = UDim2.new(0,0,0,0)
    panel.BackgroundColor3 = Color3.fromRGB(150,150,150)
    panel.Visible = false
    panel.Parent = contentArea
    panels[name] = panel

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1,0,0,50)
    label.Position = UDim2.new(0,0,0,10)
    label.BackgroundTransparency = 1
    label.Text = name.." Panel"
    label.Font = Enum.Font.GothamBold
    label.TextColor3 = Color3.fromRGB(0,0,0)
    label.TextSize = 20
    label.Parent = panel
end

-- Sidebar Buttons
for i, name in ipairs({"Player","ESP","Players","Settings"}) do
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1,-10,0,40)
    btn.Position = UDim2.new(0,5,0,10+(i-1)*45)
    btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Text = name
    btn.Parent = sidebar

    btn.MouseButton1Click:Connect(function()
        -- Alle Panels verstecken
        for _, p in pairs(panels) do
            p.Visible = false
        end
        -- Aktuelles Panel anzeigen
        panels[name].Visible = true
    end)
end

-- Standardpanel anzeigen
panels["Player"].Visible = true

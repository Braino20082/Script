	-- Teleport Button
	local teleportBtn = Instance.new("TextButton")
	teleportBtn.Size = UDim2.new(buttonWidth,0,0,buttonHeight)
	teleportBtn.Position = UDim2.new(0.025,0,0,funcYPos)

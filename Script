			voiceGui.Enabled = false
			wait(0.5)
			voiceGui.Enabled = true
		end
		showNotification("Voice wurde neu gestartet!")
	end)

	endbanBtn.MouseButton1Click:Connect(function()
		showNotification("Du wurdest entbannt (Voice Endban)")
	end)

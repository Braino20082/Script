	followBtn.Parent = functionSection
	
	local followCorner = Instance.new("UICorner")
	followCorner.CornerRadius = UDim.new(0,6)
	followCorner.Parent = followBtn
	
	-- Set canvas size for function section
	functionSection.CanvasSize = UDim2.new(0,0,0,funcYPos + buttonHeight + 20)
	
	-- Button Functions (ALL WORKING)
	local isSpectating = false
	local isFollowing = false
	
	bangBtn.MouseButton1Click:Connect(function()
		if targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
			if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
				-- Teleport behind the player
				local targetCFrame = targetPlayer.Character.HumanoidRootPart.CFrame
				player.Character.HumanoidRootPart.CFrame = targetCFrame * CFrame.new(0, 0, 3) -- 3 studs behind
				showNotification("Bang executed on " .. targetPlayer.Name .. " from behind!")
			end
		else
			showNotification("Cannot bang - target has no character")
		end
	end)
	
	bangV2Btn.MouseButton1Click:Connect(function()
		if targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
			if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
				-- Teleport in front of the player
				local targetCFrame = targetPlayer.Character.HumanoidRootPart.CFrame
				player.Character.HumanoidRootPart.CFrame = targetCFrame * CFrame.new(0, 0, -3) -- 3 studs in front
				showNotification("Bang V2 executed on " .. targetPlayer.Name .. " from front!")
			end
		else
			showNotification("Cannot bang V2 - target has no character")
		end
	end)
	
	teleportBtn.MouseButton1Click:Connect(function()
		if targetPlayer.Character and targetPlayer.Character:FindFirstChild("HumanoidRootPart") then
			if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
				-- Teleport directly into the player (same position)
				player.Character.HumanoidRootPart.CFrame = targetPlayer.Character.HumanoidRootPart.CFrame
				showNotification("Teleported into " .. targetPlayer.Name)
			end
		else
			showNotification("Cannot teleport - target has no character")
		end
	end)
	
	spectateBtn.MouseButton1Click:Connect(function()
		if not isSpectating then
			-- Start spectating
			if targetPlayer.Character and targetPlayer.Character:FindFirstChild("Humanoid") then
				workspace.CurrentCamera.CameraSubject = targetPlayer.Character.Humanoid
				spectateBtn.Text = "Stop Spectate"
				spectateBtn.BackgroundColor3 = Color3.fromRGB(200,100,50)
				isSpectating = true
				showNotification("Now spectating " .. targetPlayer.Name)
			else
				showNotification("Cannot spectate - target has no character")
			end
		else
			-- Stop spectating
			if player.Character and player.Character:FindFirstChild("Humanoid") then
				workspace.CurrentCamera.CameraSubject = player.Character.Humanoid
				spectateBtn.Text = "Spectate"
				spectateBtn.BackgroundColor3 = Color3.fromRGB(150,100,200)
				isSpectating = false
				showNotification("Stopped spectating " .. targetPlayer.Name)
			end
		end
	end)
	
	profileBtn.MouseButton1Click:Connect(function()
		showNotification("Profile: " .. targetPlayer.Name .. " (ID: " .. targetPlayer.UserId .. ")")
	end)
	
	kickBtn.MouseButton1Click:Connect(function()
		showNotification("Fake kick sent to " .. targetPlayer.Name .. "!")
	end)
	
	followBtn.MouseButton1Click:Connect(function()
		if not isFollowing then
			followBtn.Text = "Stop Follow"
			followBtn.BackgroundColor3 = Color3.fromRGB(255,100,100)
			isFollowing = true
			showNotification("Now following " .. targetPlayer.Name)
			
			-- Simple follow logic
			spawn(function()
				while isFollowing and targetPlayer.Character and player.Character do
					wait(0.1)
					if targetPlayer.Character:FindFirstChild("HumanoidRootPart") and player.Character:FindFirstChild("HumanoidRootPart") then
						local targetPos = targetPlayer.Character.HumanoidRootPart.Position
						player.Character.HumanoidRootPart.CFrame = CFrame.new(targetPos + Vector3.new(2,0,2))
					end
				end
			end)
		else
			followBtn.Text = "Auto Follow"
			followBtn.BackgroundColor3 = Color3.fromRGB(100,150,255)
			isFollowing = false
			showNotification("Stopped following " .. targetPlayer.Name)
		end
	end)Position - player.Character.HumanoidRootPart.Position).Magnitude
				addInfoLabel("Distance", string.format("%.1f studs", distance), Color3.fromRGB(255,200,200))
			end
		end
		
		-- Team info
		if targetPlayer.Team then
			addInfoLabel("Team", targetPlayer.Team.Name, targetPlayer.Team.TeamColor.Color)
		else
			addInfoLabel("Team", "No Team", Color3.fromRGB(150,150,150))
		end
		
		-- Tools
		local tools = {}
		for _,tool in pairs(char:GetChildren()) do
			if tool:IsA("Tool") then
				table.insert(tools, tool.Name)
			end
		end
		if #tools > 0 then
			addInfoLabel("Tools", table.concat(tools, ", "), Color3.fromRGB(255,255,150))
		else
			addInfoLabel("Tools", "None", Color3.fromRGB(150,150,150))
		end
	else
		addInfoLabel("Has Character", "No", Color3.fromRGB(255,100,100))
	end
	
	-- Membership info
	if targetPlayer.MembershipType == Enum.MembershipType.Premium then
		addInfoLabel("Membership", "Premium", Color3.fromRGB(255,215,0))
	else
		addInfoLabel("Membership", "None", Color3.fromRGB(150,150,150))
	end
	
	-- Set canvas size for info section
	infoSection.CanvasSize = UDim2.new(0,0,0,yOffset + 20)
	
	-- Function buttons
	local buttonWidth = 0.45
	local buttonHeight = 0.15
	local buttonSpacing = 0.05
	
	-- Bang Button
	local bangBtn = Instance.new("TextButton")
	bangBtn.Size = UDim2.new(buttonWidth,0,buttonHeight,0)
	bangBtn.Position = UDim2.new(0.025,0,0.2,0)
	bangBtn.Text = "Bang"
	bangBtn.BackgroundColor3 = Color3.fromRGB(200,50,50)
	bangBtn.TextColor3 = Color3.new(1,1,1)
	bangBtn.Font = Enum.Font.SourceSansBold
	bangBtn.TextScaled = true
	bangBtn.Parent = functionSection
	
	local bangCorner = Instance.new("UICorner")
	bangCorner.CornerRadius = UDim.new(0,6)
	bangCorner.Parent = bangBtn
	
	-- Bang V2 Button
	local bangV2Btn = Instance.new("TextButton")
	bangV2Btn.Size = UDim2.new(buttonWidth,0,buttonHeight,0)
	bangV2Btn.Position = UDim2.new(0.525,0,0.2,0)
	bangV2Btn.Text = "Bang V2"
	bangV2Btn.BackgroundColor3 = Color3.fromRGB(200,50,100)
	bangV2Btn.TextColor3 = Color3.new(1,1,1)
	bangV2Btn.Font = Enum.Font.SourceSansBold
	bangV2Btn.TextScaled = true
	bangV2Btn.Parent = functionSection
	
	local bangV2Corner = Instance.new("UICorner")
	bangV2Corner.CornerRadius = UDim.new(0,6)
	bangV2Corner.Parent = bangV2Btn
	
	-- Teleport Button
	local teleportBtn = Instance.new("TextButton")
	teleportBtn.Size = UDim2.new(buttonWidth,0,buttonHeight,0)
	teleportBtn.Position = UDim2.new(0.025,0,0.4,0)
	teleportBtn.Text = "Teleport"
	teleportBtn.BackgroundColor3 = Color3.fromRGB(50,150,200)
	teleportBtn.TextColor3 = Color3.new(1,1,1)

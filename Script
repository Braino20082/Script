	endbanBtn.Position = UDim2.new(0,0,0.15,0)
	endbanBtn.Text = "Voice Endban"
	endbanBtn.BackgroundColor3 = Color3.fromRGB(58,58,58)
	endbanBtn.TextColor3 = Color3.new(1,1,1)

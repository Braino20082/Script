	bangV2Btn.Font = Enum.Font.SourceSansBold
	bangV2Btn.TextSize = 14
	bangV2Btn.Parent = functionSection
	
	local bangV2Corner = Instance.new("UICorner")
	bangV2Corner.CornerRadius = UDim.new(0,6)

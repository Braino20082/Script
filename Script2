ToggleUnsichtCorner.CornerRadius = UDim.new(0, 6)
ToggleUnsichtCorner.Parent = ToggleUnsichtBtn

-- Variablen
local nameHidden = false
local charInvisible = false
local originalName = ""
local originalTransparency = {}

-- Funktionen
local function hideName()
    local character = player.Character
    if not character then return end
    
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        originalName = humanoid.DisplayName
        humanoid.DisplayName = ""
    end
end

local function showName()
    local character = player.Character
    if not character then return end
    
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid.DisplayName = originalName
    end
end

local function makeInvisible()
    local character = player.Character
    if not character then return end
    
    for _, part in pairs(character:GetDescendants()) do
        if part:IsA("BasePart") or part:IsA("Decal") then
            originalTransparency[part] = part.Transparency
            part.Transparency = 1
        elseif part:IsA("Accessory") then
            local handle = part:FindFirstChild("Handle")
            if handle then
                originalTransparency[handle] = handle.Transparency
                handle.Transparency = 1
            end
        end
    end
end

local function makeVisible()
    local character = player.Character
    if not character then return end
    
    for _, part in pairs(character:GetDescendants()) do
        if part:IsA("BasePart") or part:IsA("Decal") then
            if originalTransparency[part] then
                part.Transparency = originalTransparency[part]
            end
        end
    end
end

-- Toggle Name Event
ToggleNameBtn.MouseButton1Click:Connect(function()
    nameHidden = not nameHidden
    
    if nameHidden then
        hideName()
        NameStatus.Text = "ON"
        NameStatus.BackgroundColor3 = Color3.fromRGB(50, 200, 50)
    else
        showName()
        NameStatus.Text = "OFF"
        NameStatus.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
    end
end)

-- Toggle Unsichtbar Event
ToggleUnsichtBtn.MouseButton1Click:Connect(function()
    charInvisible = not charInvisible
    
    if charInvisible then
        makeInvisible()
        UnsichtStatus.Text = "ON"
        UnsichtStatus.BackgroundColor3 = Color3.fromRGB(50, 200, 50)
    else
        makeVisible()
        UnsichtStatus.Text = "OFF"
        UnsichtStatus.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
    end
end)

-- Close Button Event
CloseButton.MouseButton1Click:Connect(function()
    if nameHidden then showName() end
    if charInvisible then makeVisible() end
    ScreenGui:Destroy()
end)

-- Hover Effekte
CloseButton.MouseEnter:Connect(function()
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 70, 70)
end)

CloseButton.MouseLeave:Connect(function()
    CloseButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
end)

ToggleNameBtn.MouseEnter:Connect(function()
    ToggleNameBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
end)

ToggleNameBtn.MouseLeave:Connect(function()
    ToggleNameBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
end)

ToggleUnsichtBtn.MouseEnter:Connect(function()
    ToggleUnsichtBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
end)

ToggleUnsichtBtn.MouseLeave:Connect(function()
    ToggleUnsichtBtn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
end)

-- Character Respawn Handler
player.CharacterAdded:Connect(function()
    task.wait(1)
    if nameHidden then hideName() end
    if charInvisible then makeInvisible() end
end)

